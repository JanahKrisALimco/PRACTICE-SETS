using System;

public class CircleCalculator
{
    public static void Main(string[] args)
    {
        while (true)
        {
            Console.WriteLine("Choose an option:");
            Console.WriteLine("A: Calculate Area");
            Console.WriteLine("P: Calculate Perimeter");
            Console.WriteLine("X: Exit");

            Console.Write("Enter your choice (A, P, or X): ");
            string choice = Console.ReadLine().ToUpper();

            if (choice == "X")
            {
                Console.WriteLine("Exiting the application.");
                break;
            }

            Console.Write("Enter the radius of the circle: ");
            if (!double.TryParse(Console.ReadLine(), out double radius))
            {
                Console.WriteLine("Invalid radius. Please enter a numeric value.");
                continue;
            }

            switch (choice)
            {
                case "A":
                    double area = CalculateArea(radius);
                    Console.WriteLine($"The area of the circle is: {area}");
                    break;
                case "P":
                    double perimeter = CalculatePerimeter(radius);
                    Console.WriteLine($"The perimeter of the circle is: {perimeter}");
                    break;
                default:
                    Console.WriteLine("Invalid choice. Please enter A, P, or X.");
                    break;
            }
        }
    }

    public static double CalculateArea(double radius)
    {
        return Math.PI * radius * radius;
    }

    public static double CalculatePerimeter(double radius)
    {
        return 2 * Math.PI * radius;
    }
}
